{
  "name": "create-ponder",
  "version": "0.0.91",
  "description": "A CLI tool to create Ponder apps",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xOlias/ponder",
    "directory": "packages/create-ponder"
  },
  "files": [
    "dist",
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "bin": {
    "create-ponder": "./dist/bin/create-ponder.js"
  },
  "scripts": {
    "build": "pnpm clean && tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "concurrently \"tsc --project tsconfig.build.json --watch\" \"tsc-alias --project tsconfig.build.json --watch\"",
    "clean": "rimraf ./dist",
    "test": "vitest --no-threads",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "detect-package-manager": "^3.0.1",
    "execa": "5",
    "picocolors": "^1.0.0",
    "prettier": "^2.6.2",
    "prompts": "^2.4.2",
    "rimraf": "^5.0.1",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@ponder/core": "workspace:*",
    "@types/node": "^20.8.2",
    "@types/prettier": "^2.7.1",
    "@types/prompts": "^2.4.2",
    "abitype": "^0.6.7",
    "concurrently": "^8.2.0",
    "dotenv": "^16.0.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18.x"
  }
}
