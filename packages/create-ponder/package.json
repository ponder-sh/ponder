{
  "name": "create-ponder",
  "version": "0.0.80",
  "description": "A CLI tool to create Ponder apps",
  "license": "MIT",
  "files": [
    "dist",
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "bin": {
    "ponder": "./dist/bin/create-ponder.js"
  },
  "scripts": {
    "build": "pnpm clean && tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "concurrently \"tsc --project tsconfig.build.json --watch\" \"tsc-alias --project tsconfig.build.json --watch\"",
    "clean": "rimraf ./dist",
    "test": "export $(grep -v '^#' .env.local | xargs) && vitest --no-threads",
    "test:ci": "vitest --no-threads",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "detect-package-manager": "^2.0.1",
    "execa": "5",
    "node-fetch": "^2.6.7",
    "picocolors": "^1.0.0",
    "prettier": "^2.6.2",
    "prompts": "^2.4.2",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@ponder/core": "workspace:*",
    "@types/node": "^18.7.8",
    "@types/node-fetch": "2",
    "@types/prettier": "^2.7.1",
    "@types/prompts": "^2.4.2",
    "abitype": "^0.6.7",
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.2",
    "typescript": "^5.1.3",
    "vitest": "^0.29.2"
  }
}
