{
  "name": "@ponder/core",
  "version": "0.0.91",
  "description": "An open-source framework for crypto application backends",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xOlias/ponder",
    "directory": "packages/core"
  },
  "files": [
    "dist",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/_test/**/*"
  ],
  "bin": {
    "ponder": "./dist/bin/ponder.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "imports": {
    "#*": "./dist/*"
  },
  "scripts": {
    "build": "node --loader=tsx --no-warnings esbuild.config.ts",
    "build:watch": "pnpm build -- --watch",
    "clean": "rimraf ./dist",
    "test": "vitest",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@babel/code-frame": "^7.18.6",
    "@jridgewell/trace-mapping": "^0.3.17",
    "async-mutex": "^0.4.0",
    "better-sqlite3": "^8.7.0",
    "cac": "^6.7.14",
    "chokidar": "^3.5.3",
    "conf": "^10.2.0",
    "cors": "^2.8.5",
    "data-uri-to-buffer": "3.0.1",
    "detect-package-manager": "^3.0.1",
    "dotenv": "^16.0.1",
    "emittery": "^0.13.1",
    "esbuild": "^0.19.4",
    "ethereum-bloom-filters": "^1.0.10",
    "express": "^4.18.1",
    "glob": "^8.1.0",
    "graphql": "^15.3.0",
    "graphql-http": "^1.22.0",
    "http-terminator": "^3.2.0",
    "ink": "^3.2.0",
    "kysely": "^0.26.3",
    "p-limit": "3",
    "p-queue": "^7.4.1",
    "pg": "^8.9.0",
    "picocolors": "^1.0.0",
    "pino": "^8.14.1",
    "prettier": "^2.6.2",
    "prom-client": "^14.2.0",
    "react": "17",
    "retry": "^0.13.1",
    "stacktrace-parser": "^0.1.10",
    "tsc-alias": "^1.8.2",
    "viem": "^1.2.6"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.3",
    "@types/better-sqlite3": "^7.6.0",
    "@types/cors": "^2.8.12",
    "@types/detect-port": "^1.3.2",
    "@types/express": "^4.17.13",
    "@types/glob": "^8.0.0",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.8.2",
    "@types/pg": "^8.10.3",
    "@types/react": "^18.0.25",
    "@types/retry": "^0.12.2",
    "@types/supertest": "^2.0.12",
    "@viem/anvil": "^0.0.6",
    "abitype": "^0.8.11",
    "concurrently": "^8.2.0",
    "module-alias": "^2.2.2",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18.x"
  }
}
