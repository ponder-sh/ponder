{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test-d.ts",
    "src/_test",
    "src/bin/commands/debug.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/esm",
    "declarationDir": "./dist/types",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
