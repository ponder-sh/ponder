{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true,
    "sourceMap": true,
    "declarationMap": true,
    "rootDir": "src",
    "allowJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/_test", "src/**/*.test.ts"]
}
